{
    "extends": [
        "plugin:flowtype/recommended",
        "airbnb"
    ],
    "plugins": [
        "flowtype"
    ],
    "globals": {
        "document": true,
        "localStorage": true,
        "window": true,
        "Notification": true
    },
    "env": {
        "jest": true
    },
    "rules": {
        "linebreak-style": 0,
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "hrefLeft", "hrefRight" ],
            "aspects": [ "noHref", "invalidHref", "preferButton" ]
        }]
    }
}